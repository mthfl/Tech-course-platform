<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /Tech-course-platform/
    
    # Permitir acesso direto a arquivos de imagem e outros recursos
    RewriteCond %{REQUEST_URI} \.(jpg|jpeg|png|gif|ico|css|js|svg|webp)$ [NC]
    RewriteRule ^(.*)$ - [L]
    
    # Redireciona tudo para app/main/
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ app/main/index.php [L,QSA]
</IfModule>